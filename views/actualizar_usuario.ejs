    <form action="/usuario_actualizado" method="post">
    <table>
        <tr>
            <h2>Actualizacion de usuarios</h2>
        </tr>
        <tr>
            <td>Nombre: </td>
            <td><input type="text" name="txtn" placeholder="Nombre" required></td>
        </tr>
        <tr>
            <td>Numero telefónico: </td>
            <td><input type="text" name="txtnum" placeholder="Numero telefónico" required></td>
        </tr>
