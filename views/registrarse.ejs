<!DOCTYPE html>
<html>
<head>
	<title>Registro de usuarios</title>
    <link rel="stylesheet" href="/css/registrarse.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
    <div class="header"> 
        <img src="/img/logo.png" class="logo">
        <h2 class="head">Artesanías las Américas.co</h2>
    </div>
    <body>
        <div class="form-body">
                <div class="form-holder">
                    <div class="form-content">
                        <div class="form-items">
                            <h3>Registro de usuarios</h3>
                            <form class="requires-validation" method="post" action="/registroUser">
                               <div class="col-md-12">
                                <input class="form-control" type="number" name="identificacion_user" placeholder=" Numero de identificacion ." id="identificacion"required>
                                <div class="invalid-feedback">Por favor ingrese un número de identificacion!</div>
                             </div>
                                <div class="col-md-12">
                                   <input class="form-control" type="text" name="nombre_user" placeholder=" Nombre completo." id="nombre" required>
                                   <div class="invalid-feedback">Por favor ingrese un nombre!</div>
                                </div>
                                <div class="col-md-12">
                                    <input class="form-control" type="text" name="telefono_user" placeholder="Telefono" id="telefono" required>
                                    <div class="invalid-feedback">Por favor ingrese un número de teléfono!</div>
                                 </div>   
                                <div class="col-md-12">
                                    <input class="form-control" type="text" name="direccion_user" placeholder="Direccion. " id="direccion" required>
                                    <div class="invalid-feedback">Por favor ingrese una dirrecion!</div>
                                </div> 
                               <div class="col-md-12">
                                  <input class="form-control" type="password" name="password_user" placeholder="Contraseña." id="password" required>
                                  <div class="invalid-feedback">Por favor, ingrese una contraseña!</div>
                               </div>
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                              <label class="form-check-label">Confirmo que mis datos son correctos.</label>
                             <div class="invalid-feedback">por favor, confirme que sus datos son correctos!</div>
                            </div>
                                <div class="form-button mt-3">
                                    <button id="submit" type="submit" class="btn btn-success" onclick="javascript:registrarUsuario();">Registrar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>
<script>
    function registrarUsuario(){
        let datos = new URLSearchParams();
        datos.append('identificacion_user',document.getElementById("identificacion").value);
        datos.append('nombre_user',document.getElementById("nombre").value);
        datos.append('telefono_user',document.getElementById("telefono").value);
        datos.append('direccion_user',document.getElementById("direccion").value);
        datos.append('password_user',document.getElementById("password").value);
        fetch('/registroUser',
        {   method: 'POST',
            body:datos
        }
        ).then(res=>res.text())
        .then(data=>{
            ingresarUsuario();
            Swal.fire({
              position: 'center',
              icon: 'success',
              title: data,
              showConfirmButton: false,
              timer: 1500
            });
        })
        function ingresarUsuario() {
            let datos = new URLSearchParams();

